{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"],
      "@utils/dom": ["src/utils/dom/index.ts"],
      "@utils/notification": ["src/utils/notification/index.ts"],
      "@shaders": ["src/shaders/index.ts"],
      "@constants": ["src/constants/index.ts"],
      "@kuroshiro-analyzer-kuromoji": ["src/lib/kuroshiro-analyzer-kuromoji.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/lib/Kuroshiro.js", "src/lib/kuroshiro-analyzer-kuromoji.ts"]
}
